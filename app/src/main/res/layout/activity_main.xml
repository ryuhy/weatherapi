<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E66E80E7"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/wea_rela_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/wea_button"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_but"
                android:text="현재 위치" />


            <TextView
                android:id="@+id/wea_location"
                android:layout_width="344dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="20dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_Weather"
                    android:layout_width="163dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    app:srcCompat="@drawable/contrast" />

                <TextView
                    android:id="@+id/wea_location_temp"
                    android:layout_width="147dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wea_maxtemp_txt"
                    android:layout_width="121dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="최대 온도" />

                <TextView
                    android:id="@+id/wea_maxtemp"
                    android:layout_width="117dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wea_mintemp_txt"
                    android:layout_width="121dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="최소 온도" />

                <TextView
                    android:id="@+id/wea_mintemp"
                    android:layout_width="117dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wea_wet_txt"
                    android:layout_width="121dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="습도" />

                <TextView
                    android:id="@+id/wea_windy_txt"
                    android:layout_width="121dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="풍속" />


                <TextView
                    android:id="@+id/wea_rainy_txt"
                    android:layout_width="111dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="강수확률" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wea_wet"
                    android:layout_width="117dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wea_windy"
                    android:layout_width="117dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wea_rainy"
                    android:layout_width="117dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>